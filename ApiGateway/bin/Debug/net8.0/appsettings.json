{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "keycloak-token": {
        "ClusterId": "keycloak",
        "Match": {
          "Path": "/api/login"
        },
        "Transforms": [
          {
            "PathPattern": "/realms/group3realm/protocol/openid-connect/token"
          }
        ]
      },
      "keycloak-logout": {
        "ClusterId": "keycloak",
        "AuthorizationPolicy": "Authenticated",
        "Match": {
          "Path": "/auth/logout"
        },
        "Transforms": [
          {
            "PathPattern": "/realms/group3realm/protocol/openid-connect/logout"
          }
        ]
      },
      "keycloak-userinfo": {
        "ClusterId": "keycloak",
        "AuthorizationPolicy": "Authenticated",
        "Match": {
          "Path": "/auth/userinfo"
        },
        "Transforms": [
          {
            "PathPattern": "/realms/group3realm/protocol/openid-connect/userinfo"
          }
        ]
      },
      "keycloak-revoke": {
        "ClusterId": "keycloak",
        "AuthorizationPolicy": "Authenticated",
        "Match": {
          "Path": "/auth/revoke"
        },
        "Transforms": [
          {
            "PathPattern": "/realms/group3realm/protocol/openid-connect/revoke"
          }
        ]
      },
      "keycloak-auth": {
        "ClusterId": "keycloak",
        "Match": {
          "Path": "/auth/authorize"
        },
        "Transforms": [
          {
            "PathPattern": "/realms/group3realm/protocol/openid-connect/auth"
          }
        ]
      },
      "keycloak-certs": {
        "ClusterId": "keycloak",
        "Match": {
          "Path": "/auth/certs"
        },
        "Transforms": [
          {
            "PathPattern": "/realms/group3realm/protocol/openid-connect/certs"
          }
        ]
      },
      "typicode-api": {
        "ClusterId": "typicode",
        "AuthorizationPolicy": "Authenticated",
        "Match": {
          "Path": "/api/{**catch-all}",
          "Methods": [ "GET" ]
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api"
          }
        ]
      }
    },
    "Clusters": {
      "keycloak": {
        "Destinations": {
          "destination1": {
            "Address": "http://154.38.180.80:8080"
          }
        }
      },
      "typicode": {
        "Destinations": {
          "destination1": {
            "Address": "https://jsonplaceholder.typicode.com"
          }
        }
      }
    }
  }
}